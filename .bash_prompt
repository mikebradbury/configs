# If in GIT initilised folder, get the name of the branch and put in parens
gitBranch() {
    git branch 2> /dev/null | sed -e '/^[^*]/d' -e 's/* \(.*\)/ (\1)/'
}

# Show the virtualenv prompt-prefix
if [[ $VIRTUAL_ENV ]]; then
    PS1="$(echo $VIRTUAL_ENV | sed 's/.*\///') $PS1"
fi

export PS1="\[\033[33;1m\]\u@\h\[\033[m\]:\[\033[32m\]\w\[\033[m\]\$(gitBranch)\n\$ "
